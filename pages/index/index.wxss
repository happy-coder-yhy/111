.piaoshu {
  margin: 10px auto;
  width: 132px;
  height: 32px;
  background-color: pink;
  text-align: center;
  line-height: 32px;
}

button {
  margin: 10px;
}

input {
  margin: 5px auto;
  padding: 5px;
  width: 50%;
  height: 30px;
  border: 1px solid #ddd;
  border-radius: 10px;
}
.bottom {
  margin: 20rpx 10rpx;
  color: white;
}
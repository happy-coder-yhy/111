/* pages/list/list.wxss */
/* 1px = 2rpx */
@import"/commom/common.wxss";

form {
  display: flex; 
  justify-content: space-evenly;
  width: 100%;
}
form button {
  margin: 20rpx auto;
}
input {
  display: inline-block;
  margin: 20rpx;
  padding-left: 10rpx;
  width: 320rpx;
  height: 90rpx;
  border: 2rpx solid #dddddd;
  border-radius: 15rpx;
  box-shadow: 1px 1px 3px 0px rgba(0, 0, 0, 0.5);
}

.picker {
  margin: 20rpx;
  padding-left: 10rpx;
  width: 334rpx;
  height: 90rpx;
  line-height: 80rpx;
  border: 2rpx solid #dddddd;
  border-radius: 15rpx;
  box-shadow: 1px 1px 3px 0px rgba(0, 0, 0, 0.5);
}

.list {
  /* padding-bottom: 30px; */
  height: 420px;
  border-top: 3px solid rgb(95, 182, 95);
  border-radius: 36rpx 30rpx 0 0;
}
.scroll-list {
  height: 630rpx;
  overflow: auto;
}
/* button {
  margin: 20rpx 60rpx;
} */
.num {
  margin: 10rpx 10rpx;
  width: 240rpx;
  height: 60rpx;
  background-color: #efefef;
  box-shadow: 1px 1px 3px 1px rgba(0, 0, 0, 0.3);
  text-align: center;
  line-height: 63rpx;
  font-family: 'Times New Roman', Times, serif;
  font-size: 20px;
  font-weight: 700;
}
.tip {
  line-height: 80rpx;
  color: rgb(233, 167, 178);
}
.plan {
  position: relative;
  padding-top: 5rpx;
  padding-left: 15rpx;
  width: 100%;
  height: 220rpx;
  background-color: rgb(238, 214, 136);
  line-height: 75rpx;
  margin: 30rpx 10rpx;
  font-size: 30rpx;
  box-shadow: -1px 1px 3px 1px rgba(0, 0, 0, 0.5);
}
.emphasis {
  color: rgb(138, 66, 15);
  font-family: 'Times New Roman', Times, serif;
  font-weight: bold;
}
.gotoPredict {
  display: inline-block;
  margin-left: 20rpx;
  text-decoration: underline;
  color: green;
}
.routePlan, .cancel {
  position: absolute;
  /* margin: 20rpx 10rpx; */
  color: white;
  box-shadow: 2px 2px 3px 0px rgba(0, 0, 0, 0.5);
}
.routePlan {
  top: 8%;
  right: 5%;
  background-color: rgb(95, 180, 95);
}
.cancel {
  top: 55%;
  right: 5%;
  background-color: rgb(221, 73, 73);
}
.contentTime {
  position: absolute;
}
.contentDeparture {
  position: absolute;
  top: 23%;
}
.contentDest {
  position: absolute;
  top: 44%;
}
.contentCity {
  position: absolute;
  top: 66%;
}
.box {
  height: 4000rpx;
  background-color: skyblue;
}
.autoDelete {
  padding-right: 5px;
  position: absolute;
  left: 42%;
  top: 3%;
  width: 70px;
  height: 36px;
  background-color: rgb(230, 146, 178);
  color: #ffffff;
  text-align: right;
  line-height: 36px;
  font-family: 'Times New Roman', Times, serif;
  font-weight: bold;
  font-size: 18px;
  border-radius: 10rpx;
  box-shadow: 1px 1px 3px 0px rgba(0, 0, 0, 0.8);
}
img {
  width: 20px;
  height: 10px;
}
.lock {
  margin-top: 400rpx;
  margin-left: 315rpx;
  width: 120rpx;
  height: 120rpx;
}
.modal {
  margin-top: 50rpx;
  text-align: center;
  color: gray;
  font-size: 25px;
}

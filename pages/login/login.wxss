/* pages/home/home.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  margin-top: 130px;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}


.avatar-wrapper {
  padding: 0;
  width: 120px !important;
  height: 120px;
  border-radius: 60px;
  margin-top: 40px;
  margin-bottom: 40px;
  background-color: #ffffff;
  border: 1px solid #dddddd;
  text-align: center;
  line-height: 75px;
}

.avatar {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: block;
  width: 120px;
  height: 120px;
  border-radius: 50%;
}

.nickname-wrapper {
  position: absolute;
  transform: translateX(-50%);
  display: flex;
  padding: 16px;
  box-sizing: border-box;
  border: .5px solid rgba(0, 0, 0, 0.2);
  border-radius: 10px;
  color: black;
}

.nickname-label {
  width: 45px;
}

.nickname-input {
  flex: 1;
}

.btn {
  position: absolute;
  top: 55%;
  left: 50%;
  transform: translateX(-50%);
  height: 50px;
  background-color: green;
  border-radius: 10px;
  text-align: center;
  line-height: 36px;
  color: #ffffff;
}

.tip {
  display: flex;
  position: absolute;
  top: 65%;
  left: 50%;
  transform: translateX(-50%);
  color: #aaa;
}

.navi {
  color: rgb(43, 137, 226);
  text-decoration: underline;
}

.img {
  position: absolute;
  top: 8%;
  width: 100px;
  height: 100px;
}

.welcome {
  position: absolute;
  top: 24%;
  left: 23%;
  /* transform: translateX(-50%); */
  color: rgb(68, 185, 170);
  font-size: 28px;
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-weight: bold;
  font-style: italic;
}

.border {
  margin: 130px auto;
  width: 650rpx;
  height: 420px;
  /* border: 1px solid black; */
  box-shadow: 1px 1px 3px 3px rgba(0, 0, 0, 0.1);
}
.forget {
  position: absolute;
  top: 71.5%;
  right: 8%;
  /* transform: translateX(-50%); */
  color: red;
  text-decoration: underline;
}
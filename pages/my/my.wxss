/* pages/my/my.wxss */
.background {
  /* position: absolute; */
  width: 100%;
  height: 150px;
  background-color: #00b26a;
  border-radius: 0 0 30px 30px;
}
.display {
  position: absolute;
  top: 5%;
  left: 50%;
  transform: translateX(-50%);
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 80%;
  height: 155px;
  background-color: rgb(236, 234, 204);
  border-radius: 10px;
  color: #8ea881;
  /* box-shadow: 1px 1px 5px 1px rgba(0, 0, 0, 0.5); */
}
.display button {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  text-align: center;
}
.head {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100px;
  height: 100px;
  border-radius: 50%;
}
